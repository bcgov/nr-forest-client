{
  "extends": "@istanbuljs/nyc-config-typescript",
  "extension": [".ts", ".vue"],
  "reporter": ["html", "text-summary", "lcov"],
  "report-dir": "./nyc",
  "include": ["src/**/*.ts", "src/**/*.vue"],
  "exclude": ["src/**/*.spec.ts"],
  "all": true,
  "check-coverage": true,
  "hooks": {
    "postreport": "nyc report --reporter=lcov > coverage/lcov.info"
  }
}
