{
  "mappings":[
    {
      "name": "Related Client - sample",
      "request": {
        "urlPattern": "/api/clients/details/(.+)/related-clients",
        "method": "GET"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "transformers": [
          "response-template"
        ],
        "bodyFileName": "details/related-client-sample.json",
        "fixedDelayMilliseconds": 500
      }
    },
    {
      "name": "Related Client - Empty",
      "request": {
        "urlPattern": "/api/clients/details/e/related-clients",
        "method": "GET"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "transformers": [
          "response-template"
        ],
        "body": "{}",
        "fixedDelayMilliseconds": 500
      }
    },
    {
      "name": "Related Client - Existing related client",
      "request": {
        "urlPattern": "/api/clients/details/00000(137|158|159|172)/related-clients",
        "method": "GET"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "transformers": [
          "response-template"
        ],
        "bodyFileName": "details/related-client-{{request.path.3}}.json",
        "fixedDelayMilliseconds": 500
      }
    },
    {
      "name": "Related Client search - Default",
      "request": {
        "urlPathTemplate": "/api/clients/relation/{clientNumber}",
        "method": "GET",
        "queryParameters" : {
          "value" : {
            "matches" : "^(.*)$"
          }
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "transformers": [
          "response-template"
        ],
        "bodyFileName": "details/related-client-search-{{request.query.value}}.json"
      }
    },
    {
      "name": "Related Client - Existing related client",
      "request": {
        "urlPathTemplate": "/api/clients/relation/{clientNumber}",
        "method": "GET",
        "pathParameters" : {
          "clientNumber" : {
            "matches" : "^000000009$"
          }
        },
        "queryParameters" : {
          "value" : {
            "matches" : "^james$"
          },
          "type" : {
            "matches" : "^(JV|SH)$"
          }
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "transformers": [
          "response-template"
        ],
        "bodyFileName": "details/related-client-search-{{request.query.value}}-{{request.query.type}}.json"
      }
    }
  ]
}